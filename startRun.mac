/control/saveHistory runLog.txt

/control/verbose 1
/run/verbose 1
/vis/verbose 0

/run/initialize

#Define isotropic source. Rotate it so Z-axis looks as global Z axis. And Smear it for 0.0016 rad
/gps/ang/type iso
/gps/pos/rot1 1 0 0
/gps/pos/rot2 0 -1 0
/gps/ang/mintheta 0. rad
/gps/ang/maxtheta 0.0016 rad

/gps/particle e-
/gps/ene/mono 5. GeV

/gps/pos/type Plane
/gps/pos/shape Circle
/gps/pos/centre 0. 0. 0. mm
/gps/pos/radius 3.8 mm

/run/beamOn 100
